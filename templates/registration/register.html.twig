{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="main_container">
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form_field'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }, {'attr': {'class': 'form_field'}}) }}
        {{ form_row(registrationForm.firstname, {'attr': {'class': 'form_field'}}) }}
        {{ form_row(registrationForm.lastname, {'attr': {'class': 'form_field'}}) }}
        {{ form_row(registrationForm.status, {'attr': {'class': 'form_field'}}) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form_field'}}) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
